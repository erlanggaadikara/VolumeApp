<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".limasegi3">

    <TextView
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Limas Segitiga"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/masukan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="103dp"
        android:text="Alas:"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="44dp" />

    <EditText
        android:id="@+id/alas1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:inputType="numberDecimal"
        android:layout_below="@id/masukan"/>

    <TextView
        android:id="@+id/masukan1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/panjang"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="197dp"
        android:text="Tinggi Segitiga:"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="44dp" />

    <EditText
        android:id="@+id/tsegi31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/masukan1"
        android:layout_marginLeft="15dp"
        android:inputType="numberDecimal"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/masukan3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="297dp"
        android:text="Tinggi Limas:"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="44dp" />

    <EditText
        android:id="@+id/tlimas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:inputType="numberDecimal"
        android:layout_below="@id/masukan3"/>

    <Button
        android:id="@+id/bt3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignStart="@+id/masukan"
        android:layout_alignParentTop="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="406dp"
        android:background="@drawable/circle"
        android:text="Hitung!" />

</RelativeLayout>